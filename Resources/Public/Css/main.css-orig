  font-weight: bold;
  text-decoration: none;
}

a:active, a:hover {
  text-decoration: underline;
}

abbr, acronym {
  border: 0px none;
  cursor: help;
}

/*
Make elements invisible without really removing them,
so they remain available to screen readers. Make links inside those elements
visible when they're tabbed to.
*/
.invisible {
  position: absolute;
  left: -9999em;
  top: auto;
  width: 1px;
  height: 1px;
  overflow: hidden;
}

.invisible a:focus, .invisible a:active {
  display: block;
  position: absolute;
  left: 10000em;
  top: 1em;
  width: auto;
  height: auto;
  white-space: nowrap;
}


/* CONTENT */
#content {
  overflow: auto;
  padding-bottom: 80px;
}


/* FOOT */
#foot {
  height: 80px;
  margin-top: -80px;
  padding: 0px;
  position: relative;
  clear: both;
  font-size: 86%;
  color: #8d95b5;
  background: #263476 url(../Images/footer.png) repeat-x top;
}

#foot p {
  display: block;
  width: 940px;
  margin: 0 auto;
  padding: 40px 10px 0px 10px;
}

#foot a:link, #foot a:visited, #foot a:active {
  color: #d9dbe7;
  text-decoration: none;
}

#foot a:hover {
  text-decoration: underline;
}



/*  MENU */
#menu {
  position: relative;
  height: 85px;
  margin-bottom: 20px;
  font-size: 14px;
}

#menu ul {
  margin: 0;
  padding: 0;
}

#menu ul.mainmenu {
  padding-top: 18px;
  list-style-type: none;
}

.mainmenu li {
  display: inline;
  margin-right: 0.9em;
}

.mainmenu li.last {
  margin-right: 0;
}

.mainmenu li a {
  padding: 3px 5px;
  font-weight: bold;
}

.mainmenu a {
  font-weight: bold;
  text-decoration: none;
  color: #234f8f;
  margin: 0px 1px;
  border-style: solid;
  border-width: 1px 1px;
  border-color: #eaecf4 transparent #dadada;
  -webkit-border-radius: 7px;
  -moz-border-radius: 7px;
  border-radius: 7px;
}

* html .mainmenu a {
  border-width: 1px 0px;
}

.mainmenu a:link:hover,
.mainmenu a:visited:hover {
  color: #234f8f;
  background: #fff;
  border-top: 1px solid #fff;
  border-bottom: 1px solid #dadada;
}

.mainmenu .currentParent > a {
  color: #445875;
  background: #d1d3df;
  border-top: 1px solid #eaecf4;
  border-bottom: 1px solid #c4c4c4;
}

.mainmenu .currentParent > a:hover,
.mainmenu .current a:hover {
  color: #445875;
  background: #d1d3df;
  border-top: 1px solid #eaecf4;
  border-bottom: 1px solid #c4c4c4;
}

.mainmenu .current > a,
body.homepage .mainmenu > li.first > a,
body.homepage .submenu > li.first > a {
  font-weight: bold;
  color: #384b66;
  background: #d1d3df;
  border-top: 1px solid #eaecf4;
  border-bottom: 1px solid #c4c4c4;
  -webkit-border-radius: 7px;
  -moz-border-radius: 7px;
  border-radius: 7px 7px 7px 7px;
}

.mainmenu .current > a:hover {
  color: #384b66;
  background: #d1d3df;
  border-top: 1px solid #eaecf4;
  border-bottom: 1px solid #cecece;
}


#menu ul.submenu {
  position: absolute;
  top: 48px;
  left: 18px;
  right: 0;
  text-transform: none;
}

.submenu li {
  margin: 0;
}

.submenu li:after {
  margin: 0 0.7em 0 0.4em;
  content: 'â€¢';
}

.submenu li.last:after {
  margin: 0;
  content: '';
}

.submenu li.unlinkedParent {
  color: #474747;
}

.submenu li.unlinkedParent a:after {
  content: ':';
}

.submenu li.unlinkedParent ul a:after {
  content: '';
}

.submenu:before {
  display: block;
  height: 16px;
  width: 10px;
  position: absolute;
  top: -8px;
  left: -12px;
  border: solid #999;
  border-width: 0px 0px 1px 1px;
  content: ' ';
}

.submenu li a:link {
  font-weight: normal;
  color: #2759a2;
  border-top: 1px solid #fff;
  border: none;
}

.submenu a:link:hover, .submenu a:visited:hover {
  background: #fff;
  color: #273572;
  border-top: 1px solid #fff;
  border-bottom: 1px solid #dadada;
  -webkit-border-radius: 7px;
  -moz-border-radius: 7px;
  border-radius: 7px 7px 7px 7px;
}

#menu ul.subsubmenu {
  display: inline;
  margin-left: 0.3em;
}

#menu .subsubmenu li {
  margin: 0;
}

.subsubmenu li:after {
  content: '|';
  margin: 0 0.2em;
}

#menu .subsubmenu li.last:after {
  content: '';
}


a.languageSwitcher {
